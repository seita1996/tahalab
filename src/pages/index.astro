---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import Hero2 from '~/components/widgets/Hero2.astro';

const metadata = {
  title: 'AstroWind — Free template for creating websites with Astro + Tailwind CSS',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[]}
    image={{ src: '~/assets/images/tahalab-logo.png', alt: 'tahalab logo' }}
  >
    <Fragment slot="title">
      tahalab.
    </Fragment>

    <Fragment slot="subtitle">
      A Web Site and Web Application Developer.
      <br />
      Creating clean, modern, and functional solutions for your needs.
    </Fragment>
  </Hero>

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="できること"
    title="What can I do"
    subtitle=""
    items={[
      {
        title: 'Web Site Development',
        description:
          'HTML CSS JavaScript を使い、お客様のニーズに合わせたウェブサイトを作成します。',
        icon: 'tabler:world-code',
      },
      {
        title: 'Web Application Development',
        description:
          'ログイン機能やデータベースを利用した、高機能なウェブアプリケーションを作成します。',
        icon: 'tabler:device-desktop-code',
      },
      {
        title: 'Script Development',
        description:
          'データ自動集計等のスクリプトを開発します。',
        icon: 'tabler:source-code',
      },
      {
        title: 'Infrastructure Development',
        description:
          'AWS等のクラウドインフラの構築を支援します。',
        icon: 'tabler:rocket',
      },
    ]}
  />

  <Hero2
    title="Works"
    subtitle="tahalabが携わったお仕事"
    tagline="構築実績"
    actions={[
      {
        href: '/category/works',
        variant: 'primary',
        text: 'もっと見る',
      },
    ]}
    image={{ src: '~/assets/images/work-image.png', alt: 'AstroWind' }}
  />

  <Hero2
    title="News"
    subtitle="tahalabからのお知らせ"
    tagline="最新情報"
    actions={[
      {
        href: '/category/news',
        variant: 'primary',
        text: 'もっと見る',
      },
    ]}
    image={{ src: '~/assets/images/news-image.png', alt: 'AstroWind' }}
  />

  <!-- HighlightedPosts Widget ******* -->

  <BlogLatestPosts
  />
</Layout>
